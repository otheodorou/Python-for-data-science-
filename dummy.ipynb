results_cloud = []

date = "2024-10-01"
for arr, df_arr in df_final.groupby("arrondissement"):
    cloud_sites = []
    
    for _, row in df_arr.iterrows():
        lat = float(str(row['latitude']).strip())
        lon = float(str(row['longitude']).strip())
        
        try:
            url = (
                f"https://archive-api.open-meteo.com/v1/archive"
                f"?latitude={lat}&longitude={lon}"
                f"&start_date={date}&end_date={date}"
                "&hourly=cloud_cover"
                "&timezone=Europe/Berlin"
            )
            resp = requests.get(url)
            resp.raise_for_status()
            data = resp.json()
            cloud_sites.extend(data['hourly']['cloud_cover'])
        except Exception as e:
            print(f"Erreur pour {arr}, site {lat}, {lon} : {e}")
    
    results_cloud.append({
        'arrondissement': arr,
        'couverture_nuageuse_moyenne_%': sum(cloud_sites)/len(cloud_sites) if cloud_sites else None
    })

df_cloud = pd.DataFrame(results_cloud)

df_cloud['arr_num'] = df_cloud['arrondissement'].str.extract(r'(\d+)').astype(int)
df_cloud = df_cloud.sort_values('arr_num').drop(columns='arr_num').reset_index(drop=True)

print(df_cloud)

